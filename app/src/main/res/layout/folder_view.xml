<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/folder_icon"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/folder"
        app:tint="@color/yellow" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_toEndOf="@id/folder_icon"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/folder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/folder_icon"
            android:text="@string/folder_name"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/folder_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/folder_name"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@+id/total_song"
            android:text="/storage/0/down"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/folder_more"
        android:layout_width="25dp"
        android:background="?attr/selectableItemBackground"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:src="@drawable/more_vert"
        app:tint="@color/black" />

</RelativeLayout>